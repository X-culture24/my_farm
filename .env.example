# Farm Management System Environment Configuration
# Copy this file to .env and update the values

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
API_PREFIX=/api
FRONTEND_URL=http://localhost:3001

# Database Configuration
MONGODB_URI=mongodb://admin:password123@localhost:27017/farm_system?authSource=admin
MONGODB_OPTIONS=retryWrites=true&w=majority
DB_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://:redis123@localhost:6379
REDIS_PREFIX=farm:
SESSION_SECRET=your-session-secret-change-in-production
SESSION_TIMEOUT=3600

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESS=true

# File Upload Configuration
FILE_UPLOAD_MAX_SIZE=10485760
FILE_UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx

# External Services
WEATHER_API_KEY=your-weather-api-key
SMS_API_KEY=your-sms-api-key
EMAIL_SERVICE_KEY=your-email-service-key

# Monitoring & Logging
LOG_LEVEL=info
LOG_FORMAT=json
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Development Tools (Development only)
ENABLE_SWAGGER=true
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3001
